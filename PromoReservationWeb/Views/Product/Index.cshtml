@model ICollection<ProductGroup>
@{
    ViewData["Title"] = "Index";
}

<h1>Product Groups</h1>
<table class="striped">
    <thead>
        <tr>
            <th>
                Group Name
            </th>
            <th>
                Description
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.GroupName
                </td>
                <td>
                    @item.ProductDescription
                </td>
                <td>
                    @*<a asp-action="edit">
            <i class="material-icons">edit</i>
        </a>*@


                    <a class="btn-floating btn-sm waves-effect waves-light blue" asp-action="Edit" asp-route-Id="@item.Id"><i class="material-icons">edit</i></a>

                    <a class="btn-floating btn-sm waves-effect waves-light red"><i class="material-icons">delete</i></a>

                </td>
            </tr>
        }
    </tbody>
</table>
<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <a class="btn-floating btn-large waves-effect waves-light red" asp-action="Create">
        <i class="large material-icons">mode_edit</i>
    </a>   
</div>
